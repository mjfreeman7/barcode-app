<h1> Edit Job </h1>
<blockquote>
  <p class="lead">Update details</p>
</blockquote>
<%= simple_form_for(@job, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.input :details %>
  <%= f.input :barcode %>
  <%= f.input :comments %>
  <%= f.association :user %>
  <div class="form-actions">
   <%= f.button :submit, :class => "btn btn-primary" %>
   <%= link_to "Cancel", jobs_path, :class => "btn" %>
   <div>
<% end %>