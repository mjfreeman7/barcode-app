
<div class="row-fluid">
  <div class="span12">
      <!-- block -->
      <div class="block">
          <div class="navbar navbar-inner block-header">
              <div class="muted pull-left">Jobs</div>
              <div class="pull-right"><span><%= link_to '<i class="icon-white icon-plus"></i> New Job'.html_safe, new_job_path, :class => "badge badge-info" %></span>
              </div>
          </div>
          <div class="block-content collapse in">
              <table class="table table-striped table-hover display" id="jobs">
                  <thead>
                      <tr>
                          <th></th>
                          <th>Job</th>
                          <th>Barcode</th>
                          <th>Opened</th>
                          <th>Updated</th>
                          <th>Added</th>
                          <th>Status</th>
                          <th>Edit</th>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                        <% @jobs.each do |job| %>
                          <td><%= link_to "view", job_path(job), :class => "label label-info" %></td>
                          <td><%= job.details %></td>
                          <td><%= job.barcode %></td>
                          <td><%= job.created_at.localtime.to_formatted_s(:short) %></td>
                          <td><%= job.updated_at.localtime.to_formatted_s(:short) %></td>
                          <td><%= time_ago_in_words(job.created_at) %> ago</td>
                          <td>
                          <% if job.status %>
                            <%= link_to "Complete", edit_job_path(job), :class => "label label-info" %>
                          <% else %>
                           <%= link_to "Incomplete", edit_job_path(job), :class => "label" %>
                          <% end %>
                          </td>
                          <td><%= link_to " ", edit_job_path(job), :class => "badge badge-success fa fa-pencil" %>
                            <%= link_to " ", job, method: :delete, data: { confirm: "Are you sure?" }, :class => "badge badge-important fa fa-trash-o" %>
                          </td>
                      </tr>

                      <% end %>
                  </tbody>
              </table>
          </div>


      </div>
      <!-- /block -->
  </div>
</div>