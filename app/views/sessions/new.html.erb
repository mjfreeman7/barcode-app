<% flash.each do |name, msg| %>
<% if flash[:notice] %>
	<div class="alert alert-block alert-danger fade in">
	  <button data-dismiss="alert" class="close close-sm" type="button">
	      <i class="icon-remove"></i>
	  </button>
		<strong>Oops!</strong> <%= content_tag :div, msg, :id => "flash_#{name}" %>
	</div>
	<% end %>
<% end %>

<div class="form-signin">
    <h2 class="form-signin-heading">sign in now</h2>
    <div class="login-wrap">
		<%= form_tag sessions_path do %>
         <%= text_field_tag :name, params[:name], :class => "form-control", :placeholder => "User ID", :autofocus => true %>
         <%= password_field_tag :password, params[:password], :class => "form-control", :placeholder => "Password" %>
		  <div class="actions"><%= submit_tag "Log In", :class => "btn btn-lg btn-login btn-block" %>
		<% end %>
	</div>
</div>

